<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TASK procedure"
            android:textColor="@color/quantum_white_100"
            android:textSize="35dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"

            android:background="@color/colorpurple" />


        <FrameLayout
            android:id="@+id/list_here"
            android:layout_width="match_parent"
            android:layout_height="600dp">

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/TV_ListEntry"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="106dp"
        android:background="#673AB7"
        android:backgroundTint="@color/colorpurple"


        android:foregroundGravity="bottom"
        android:src="@drawable/task_add"
        app:fabCustomSize="@dimen/_50sdp"
        app:maxImageSize="@dimen/_40sdp" />

    <LinearLayout
        android:id="@+id/rlWriteTask"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_home"
        android:gravity="center">


        <TextView
            android:id="@+id/tvWriteTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Write Task"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

    </LinearLayout>


</RelativeLayout>