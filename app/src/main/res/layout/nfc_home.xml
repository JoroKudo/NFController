<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/llBody"

    android:orientation="vertical"
    android:padding="20dp">


    <RelativeLayout
        android:id="@+id/rlReadNFCTAG"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:background="@drawable/bg_home"
        android:gravity="center">


        <TextView
            android:id="@+id/tvReadWithNfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_Read_with_nfc"
            android:textColor="@android:color/white"
            android:textSize="40sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlWriteWithNFC"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_home"
        android:gravity="center">


        <TextView
            android:id="@+id/tvWriteWithNfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_Write_with_nfc"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rladdtask"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_home"
        android:gravity="center">


        <TextView
            android:id="@+id/tvaddtask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_task"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlWipeWithNFC"
        android:layout_width="match_parent"
        android:layout_height="88dp"

        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_home"
        android:gravity="center">


        <TextView
            android:id="@+id/tvWipeWithNfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_Wipe_with_nfc"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTestWithNFC"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_home"
        android:gravity="center">


        <TextView
            android:id="@+id/tvTestWithNfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_GPS_permissions"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </RelativeLayout>


</LinearLayout>

